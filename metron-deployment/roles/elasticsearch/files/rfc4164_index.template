{
   "template": "rfc4164*",
   "order" : 1,
   "settings" : {
      "number_of_shards" : 1
   },
   "aliases": {
      "unixsyslog": {}
   },
   "mappings": {
      "rfc4164_doc": {
         "_timestamp": {
            "enabled": true
         },
         "properties": {
            "timestamp" : {
               "type" : "date",
               "format" : "epoch_millis"
            },
            "priority": {
               "type": "long",
               "index": "not_analyzed"
            },
            "hostname": {
               "type": "string",
               "index": "not_analyzed"
            },
            "tag": {
               "type": "string",
               "index": "not_analyzed"
            },
            "extra_info": {
               "type": "string",
               "index": "analyzed"
            },
            "message": {
               "type": "string",
               "index": "analyzed"
            }
         }
      }
   }
}